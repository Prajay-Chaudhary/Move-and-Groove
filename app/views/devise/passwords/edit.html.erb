<div class="container my-lg-4 my-2">
  <div class="row justify-content-center m-lg-5">
    <div class="col-8 bg-success">
      <h2 class="text-center m-2 m-lg-5">Change your password</h2>
      <div class="row justify-content-center">
        <div class="col-7 m-1 text-center">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/errors", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="field">
              <%= f.label :password, "New password", class: "mb-0" %><br />
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em><br />
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "mb-3" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, "Confirm new password" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mb-3" %>
            </div>

            <div class="actions">
              <%= f.submit "Change my password", class: "btn btn-warning text-dark mb-md-5 mb-2" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>