<div class="container my-2">
  <div class="row justify-content-center my-2 my-lg-5">
    <div class="col-lg-8 col-10 bg-success">
      <h1 class="text-center m-2 m-lg-5"><%= t('.forgot_your_password') %></h1>
      <div class="row justify-content-md-center">
        <div class="col-md-7 col m-1">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/errors", resource: resource %>

            <div class="form-group">
              <%= f.label :email, class: 'mb-2' %>
              <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control mb-3' %>
            </div>

            <div class="form-group text-center">
              <%= f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-warning text-dark mb-sm-5 mb-4' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>