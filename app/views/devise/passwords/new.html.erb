<h1 class="text-center m-5"><%= t('.forgot_your_password') %></h1>
<div class="row justify-content-center">
  <div class="col-5 m-1">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/errors", resource: resource %>

      <div class="form-group">
        <%= f.label :email, class: 'mb-2' %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control mb-3' %>
      </div>

      <div class="form-group text-center">
        <%= f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-outline-success text-dark mb-3' %>
      </div>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</div>