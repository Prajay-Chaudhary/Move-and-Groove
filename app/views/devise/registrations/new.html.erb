<h1 class="text-center m-5"><%= t('.sign_up') %></h1>
<div class="row justify-content-center">
  <div class="col-7 m-2">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/errors", resource: resource %>

      <div class="form-group">
        <%= f.label :email, class: 'm-2' %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control mb-2 ' %>
      </div>
      <div class="row g-3">
        <div class="form-group col-md-6">
          <%= f.label :first_name, class: 'm-2' %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: 'first name', class: 'form-control mb-2' %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :last_name, class: 'm-2' %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: 'last name', class: 'form-control mb-2' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, class: 'm-2' %>
        <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control mb-2' %>

        <% if @minimum_password_length %>
          <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: 'm-2' %>
        <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control mb-2' %>
      </div>

      <div class="form-group text-center">
        <%= f.submit t('.sign_up'), class: 'btn btn-outline-success text-dark m-3' %>
      </div>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</div>