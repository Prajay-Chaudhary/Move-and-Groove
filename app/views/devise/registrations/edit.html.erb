<div class="text-center m-3">
  <h1><%= t('.title', resource: resource_name.to_s.humanize) %></h1>
</div>
<div class="row justify-content-center m-2">
  <div class="col-7 m-2">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= bootstrap_devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email, class: 'm-1' %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control m-1' %>
      </div>
      <div class="row g-3">
        <div class="form-group col-md-6">
          <%= f.label :first_name, class: 'm-1' %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: 'first name', class: 'form-control m-1' %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :last_name, class: 'm-1' %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: 'last name', class: 'form-control m-1' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, class: 'm-1' %>
        <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control m-1' %>

        <small class="form-text text-muted"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></small>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: 'm-1' %>
        <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control m-1'  %>
      </div>

      <div class="form-group">
        <%= f.label :current_password, class: 'm-1' %>
        <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control m-1' %>

        <small class="form-text text-muted"><%= t('.we_need_your_current_password_to_confirm_your_changes') %></small>
      </div>

      <div class="form-group">
        <%= f.submit t('.update'), class: 'btn btn-success' %>
      </div>
    <% end %>

    <p><%= t('.unhappy') %>? <%= link_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete %>.</p>

    <%= link_to t('.back'), :back %>
  </div>
</div>
