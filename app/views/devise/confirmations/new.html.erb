<div class="container mb-5">
  <h2 class="text-center m-5">Resend confirmation instructions</h2>
  <div class="row justify-content-center">
    <div class="col-8 col-md-5 m-1 text-center">
      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/errors", resource: resource%>

        <div class="field text-start">
          <%= f.label :email, class: "mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'mb-3 form-control', value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
        </div>

        <div class="actions text-center">
          <%= f.submit "Resend confirmation instructions", class: "btn btn-outline-success text-dark" %>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
