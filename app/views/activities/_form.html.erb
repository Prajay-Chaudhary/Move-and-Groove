<div class="container">
  <div class="row justify-content-center m-3">
    <div class="col-10">
      <%= render 'devise/shared/errors', resource: @activity %>
      <%= form_with(model: activity, class: "shadow p-3 mb-2 bg-success rounded") do |form| %>
        <div class="form-group row m-1 m-md-3">
          <%= form.label :activity_name, class: "col-md-2 col-12 col-form-label text-light" %>
          <div class="col-10">
            <%= form.select :activity_name, 
              options_for_select([["Select Activity", ""], "Running", "Walking", "Swimming",
                                "Arc Trainer", "Mountain Biking",
                                  "Skating", "Wheelchair",
                                  "Boxing", "Core Strength",
                                  "Circuit Training"], selected: @activity.activity_name), {},
                                  { class: "form-control shadow-rounded" }
            %>
          </div>
        </div>
        <div class="form-group row m-1 m-md-3">
          <%= form.label :activity_date, class: "col-md-2 col-12 col-form-label text-light" %>
          <div class="col-10">
            <%= form.date_field :activity_date, rows: 10, class: "form-control shadow-rounded", placeholder: "Select an activity date" %>
          </div>
        </div>

        <div class="form-group row m-1 m-md-3">
          <%= form.label :duration, class: "col-md-2 col-12 col-form-label text-light" %>
          <div class="col-10 p-2">
            <%= form.time_select :duration, prompt: true, include_seconds: true, default: {hour: 0, min:0, second:0}, rows: 8, class: "form-control shadow-rounded" %>
          </div>
        </div>
        <div class="form-group d-flex justify-content-center m-2 m-lg-5">
          <%= form.submit class: "btn btn-info text-dark" %>
        </div>
        <div class="m-4 d-flex justify-content-center">
          <%= link_to '[ Cancel and return back to the activities listing ]', activities_path, class: "text-warning" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
