<div class="container">
  <div class="row justify-content-center m-3">
    <div class="col-10">
      <%= render 'devise/shared/errors', resource: @activity %>
      <%= form_with(model: activity, class: "shadow p-3 mb-2 bg-info rounded") do |form| %>
        <div class="form-group row m-3">
          <%= form.label :activity_name, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.text_field :activity_name, class: "form-control shadow-rounded", placeholder: "Enter activity name" %>
          </div>
        </div>
        <div class="form-group row m-3">
          <%= form.label :activity_date, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.date_field :activity_date, rows: 10, class: "form-control shadow-rounded", placeholder: "Select the activity date" %>
          </div>
        </div>

        <div class="form-group row m-3">
          <%= form.label :duration, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.time_field :duration, rows: 8, class: "form-control shadow-rounded", placeholder: "Select the duration" %>
          </div>
        </div>
        <div class="form-group d-flex justify-content-center m-5">
          <%= form.submit class: "btn btn-outline-success" %>
        </div>
        <div class="m-4 d-flex justify-content-center">
          <%= link_to '[ Cancel and return back to the activities listing ]', activities_path, class: "text-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
